<div class='container mx-auto px-4'>
  <div class='overflow-x-auto'>
    <table
      class='min-w-full table-fixed divide-y divide-gray-200 bg-white shadow-md rounded-lg'
    >
      <thead class='bg-gray-100 text-gray-700 text-sm font-semibold'>
        <tr>
          <th class='px-4 py-2 text-left w-1/6'>
            ID
          </th>
          <th class='px-4 py-2 text-left w-1/6'>
            Username
          </th>
          <th class='px-4 py-2 text-left w-1/6'>
            Total
          </th>
          <th class='px-4 py-2 text-left w-1/6'>
            Trạng thái đơn hàng
          </th>
          <th class='px-4 py-2 text-left w-1/6'>
            Thời gian tạo
          </th>
          <th class='px-4 py-2 text-center w-1/6'>
            Actions
          </th>
        </tr>
      </thead>
      <tbody class='divide-y divide-gray-100 text-sm text-gray-800'>
        {{#each orders}}
          <tr class='hover:bg-gray-50'>
            <td class='px-4 py-2 truncate'>
              {{this._id}}
            </td>
            <td class='px-4 py-2'>
              {{this.username}}
            </td>
            <td class='px-4 py-2 text-red-600 font-semibold'>
              {{formatCurrency this.total}}
            </td>
            <td class='px-4 py-2'>
              {{this.status}}
            </td>
            <td class='px-4 py-2'>
              {{formatDate this.created_at}}
            </td>
            <td class='px-4 py-2 text-center'>
              <a
                href="/admin/order/edit/{{this._id}}"
                class='inline-block px-3 py-1 text-white bg-blue-600 hover:bg-blue-700 rounded-md text-sm'
              >
                Edit
              </a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>