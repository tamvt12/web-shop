<div class='max-w-5xl mx-auto p-4 bg-white shadow-md rounded'>
  <div class='overflow-x-auto'>
    <table class='min-w-full table-auto text-sm text-left text-gray-700'>
      <thead class='bg-gray-100'>
        <tr>
          <th class='px-4 py-3 font-semibold text-gray-600'>
            ID
          </th>
          <th class='px-4 py-3 font-semibold text-gray-600'>
            Tên danh mục
          </th>
          <th class='px-4 py-3 font-semibold text-gray-600 w-32'>
            Hành động
          </th>
        </tr>
      </thead>
      <tbody>
        {{#each categories}}
          <tr class='border-t hover:bg-gray-50'>
            <td class='px-4 py-2'>
              {{this._id}}
            </td>
            <td class='px-4 py-2'>
              {{this.name}}
            </td>
            <td class='px-4 py-2'>
              <div class='flex space-x-2'>
                <a
                  href="/admin/category/edit/{{this._id}}"
                  class='inline-block px-3 py-1 bg-blue-600 text-white text-xs rounded hover:bg-blue-700 transition'
                >
                  Sửa
                </a>
                <button
                  onclick="removeRow('/admin/category/destroy/{{this._id}}')"
                  class='inline-block px-3 py-1 bg-red-600 text-white text-xs rounded hover:bg-red-700 transition'
                >
                  Xóa
                </button>
              </div>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>