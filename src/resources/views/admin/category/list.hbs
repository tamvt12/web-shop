<div class='container mx-auto p-5 bg-white'>
  <div class='overflow-x-auto'>
    <table class='min-w-full table-auto text-sm text-left text-gray-700'>
      <thead class='bg-gray-100'>
        <tr>
          <th class='max-w-10 min-w-5 px-4 py-3 font-semibold text-gray-600'>
            ID
          </th>
          <th class='w-2/6 px-4 py-3 font-semibold text-gray-600'>
            Tên danh mục
          </th>
          <th class='w-2/6 px-2 py-2 text-left text-sm font-semibold'>
            Image
          </th>
          <th class='w-1/6 px-4 py-3 font-semibold text-gray-600'>
            Hành động
          </th>
        </tr>
      </thead>
      <tbody>
        {{#each categories}}
          <tr class='hover:bg-gray-50'>
            <td class='px-4 py-2  max-w-10 min-w-5'>
              {{this.id}}
            </td>
            <td class='px-4 py-2'>
              {{this.name}}
            </td>
            <td class='px-2 py-2 text-sm'>
              <img
                src="{{this.image_url}}"
                alt="{{this.name}}"
                class='w-1/4 h-auto rounded'
              />
            </td>
            <td class='px-4 py-2'>
              <div class='flex space-x-2'>
                <a
                  href="/admin/category/edit/{{this.id}}"
                  class='inline-block px-3 py-1 bg-blue-600 text-white text-xs rounded hover:bg-blue-700 transition'
                >
                  Sửa
                </a>
                <button
                  onclick="removeRow('/admin/category/destroy/{{this.id}}')"
                  class='inline-block px-3 py-1 bg-red-600 text-white text-xs rounded hover:bg-red-700 transition'
                >
                  Xóa
                </button>
              </div>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>