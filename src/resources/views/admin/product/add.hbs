<div class='flex justify-center mt-8'>
  <div class='w-full max-w-4xl bg-white p-6 rounded-lg shadow-md'>
    {{#if messages.error}}
      <div class='bg-red-100 text-red-700 p-3 rounded mb-4'>
        {{messages.error}}
      </div>
    {{else if messages.success}}
      <div class='bg-green-100 text-green-700 p-3 rounded mb-4'>
        {{messages.success}}
      </div>
    {{/if}}

    <form method='post' action='/admin/product/add' class='space-y-4'>
      <!-- Danh mục -->
      <div>
        <label
          for='category_id'
          class='block text-custom-xs font-medium text-black mb-1'
        >
          Tên danh mục
        </label>
        <select
          name='category_id'
          id='category_id'
          class='w-full border rounded px-3 py-2'
        >
          <option value='0'>
            -- Chọn danh mục --
          </option>
          {{#each categories}}
            <option value="{{this.id}}">
              {{this.name}}
            </option>
          {{/each}}
        </select>
      </div>

      <!-- Tên sản phẩm -->
      <div>
        <label
          for='name'
          class='block text-custom-xs font-medium text-black mb-1'
        >
          Tên sản phẩm
        </label>
        <input
          type='text'
          name='name'
          id='name'
          class='w-full border rounded px-3 py-2'
          placeholder='Nhập tên sản phẩm'
        />
      </div>

      <!-- Mô tả sản phẩm -->
      <div>
        <label
          for='description'
          class='block text-custom-xs font-medium text-black mb-1'
        >
          Mô tả sản phẩm
        </label>
        <textarea
          name='description'
          id='description'
          class='w-full border rounded px-3 py-2'
          rows='3'
          placeholder='Nhập mô tả sản phẩm'
        ></textarea>
      </div>

      <!-- Giá sản phẩm -->
      <div>
        <label
          for='price'
          class='block text-custom-xs font-medium text-black mb-1'
        >
          Giá sản phẩm
        </label>
        <input
          type='number'
          name='price'
          id='price'
          class='w-full border rounded px-3 py-2'
          placeholder='Nhập giá sản phẩm'
        />
      </div>

      <!-- Tồn kho -->
      <div>
        <label
          for='stock'
          class='block text-custom-xs font-medium text-black mb-1'
        >
          Số lượng sản phẩm
        </label>
        <input
          type='number'
          name='stock'
          id='stock'
          class='w-full border rounded px-3 py-2'
          placeholder='Nhập số lượng sản phẩm'
        />
      </div>

      <!-- Hình ảnh -->
      <div>
        <label
          for='upload'
          class='block text-custom-xs font-medium text-black mb-1'
        >
          Hình ảnh sản phẩm
        </label>
        <input
          type='file'
          name='files'
          id='upload'
          multiple
          accept='image/*'
          class='w-full border rounded px-3 py-2 mb-2'
        />
        <div
          id='image_show'
          class='mb-2 grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-2'
        ></div>
        <input type='hidden' name='image_url' id='thumb' />
      </div>

      <!-- Submit -->
      <div>
        <button
          type='submit'
          class='w-full bg-btn bg-custom-green-hover text-white font-medium py-2 px-4 rounded'
        >
          Thêm
        </button>
      </div>
    </form>
  </div>
</div>