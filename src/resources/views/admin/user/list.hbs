<div class='container mx-auto p-5 bg-white'>
  <!-- Search Form -->
  <div class='mb-6'>
    <form method='GET' action='/admin/user/list' class='flex gap-4 items-end'>
      <div class='flex-1'>
        <input
          type='text'
          id='search'
          name='search'
          value='{{search}}'
          placeholder='Nhập mã khách hàng hoặc tên'
          class='w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-transparent'
          onblur="this.value = this.value.trim()"
        />
      </div>
      <div class='flex gap-2'>
        <button
          type='submit'
          class='px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2'
        >
          Tìm kiếm
        </button>
        {{#if search}}
          <a
            href='/admin/user/list'
            class='px-4 py-2 bg-gray-500 text-white rounded-md hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2'
          >
            Xóa tìm kiếm
          </a>
        {{/if}}
      </div>
    </form>
  </div>
  <div class='overflow-x-auto'>
    <table class='min-w-full table-auto text-sm text-left text-gray-700'>
      <thead class='bg-gray-100'>
        <tr>
          <th class='max-w-10 min-w-5 px-4 py-3 font-semibold text-gray-600'>
            ID
          </th>
					<th class='w-2/6 px-4 py-3 font-semibold text-gray-600'>
            Mã khách hàng
          </th>
          <th class='w-2/6 px-4 py-3 font-semibold text-gray-600'>
            Tên khách
          </th>
          <th class='w-1/6 px-2 py-2 text-left text-sm font-semibold'>
            Quyền
          </th>
          <th class='w-1/6 px-4 py-3 font-semibold text-gray-600'>
            Hành động
          </th>
        </tr>
      </thead>
      <tbody>
        {{#each users}}
          <tr class='hover:bg-gray-50'>
            <td class='text-center py-2 max-w-10 min-w-5'>
              {{this.id}}
            </td>
            <td class='px-4 py-2'>
              {{this.user_code}}
            </td>
						<td class='px-4 py-2'>
              {{this.name}}
            </td>
						<td class='px-4 py-2'>
              {{this.role}}
            </td>
            <td class='px-4 py-2'>
              <div class='flex space-x-2'>
                <a
                  href="/admin/user/edit/{{this.id}}"
                  class='inline-block px-3 py-1 bg-blue-600 text-white text-xs rounded hover:bg-blue-700 transition'
                >
                  Sửa
                </a>
                {{!-- <button
                  onclick="removeRow('/admin/category/destroy/{{this.id}}')"
                  class='inline-block px-3 py-1 bg-red-600 text-white text-xs rounded hover:bg-red-700 transition'
                >
                  Xóa
                </button> --}}
              </div>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  {{> pagination}}
</div>