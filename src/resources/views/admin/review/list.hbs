<div class='container mx-auto p-5 bg-white'>
  <div class='overflow-x-auto'>
    <table class='min-w-full table-fixed'>
      <thead class='bg-gray-100'>
        <tr>
          <th
            class='max-w-10 min-w-5 px-2 py-2  text-left text-custom-xs font-semibold'
          >
            ID
          </th>
          <th class='w-2/12 px-2 py-2  text-left text-custom-xs font-semibold'>
            Tên khách
          </th>
          <th class='w-2/12 px-2 py-2  text-left text-custom-xs font-semibold'>
            Tên sản phẩm
          </th>
          <th class='w-2/12 px-2 py-2  text-left text-custom-xs font-semibold'>
            Đánh giá
          </th>
          <th class='w-3/12 px-2 py-2  text-left text-custom-xs font-semibold'>
            Bình luận
          </th>
          <th class='w-2/12 px-2 py-2  text-left text-custom-xs font-semibold'>
            Thời gian tạo
          </th>
        </tr>
      </thead>
      <tbody>
        {{#each reviews}}
          <tr class='even:bg-gray-50'>
            <td class='text-center py-2 text-sm truncate  max-w-10 min-w-5'>
              {{this.id}}
            </td>
            <td class='px-2 py-2  text-sm'>
              {{this.username}}
            </td>
            <td class='px-2 py-2  text-sm'>
              {{this.product}}
            </td>
            <td class='px-2 py-2  text-sm font-semibold text-yellow-600'>
              {{this.rating}}
            </td>
            <td class='px-2 py-2  text-sm truncate max-w-[300px]'>
              {{this.comment}}
            </td>
            <td class='px-2 py-2  text-sm'>
              {{formatDate this.created_at}}
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  {{#if (gt totalPages 1)}}
    <div class='flex justify-end items-center mt-8 text-sm text-gray-600 space-x-1'>
      <span class='mr-3'>Trang {{currentPage}}/{{totalPages}}</span>

      {{#if (gt currentPage 1)}}
        <a href='?page=1' class='px-3 py-1 border rounded hover:bg-gray-100'>
          Đầu
        </a>
        <a href='?page={{subtract currentPage 1}}' class='px-3 py-1 border rounded hover:bg-gray-100'>
          &laquo;
        </a>
      {{/if}}

      {{#each pages}}
        {{#if (eq this ../currentPage)}}
          <span class='px-3 py-1 border border-green-600 bg-green-600 text-white rounded'>{{this}}</span>
        {{else}}
          <a href='?page={{this}}' class='px-3 py-1 border rounded hover:bg-gray-100'>
            {{this}}
          </a>
        {{/if}}
      {{/each}}

      {{#if (lt currentPage totalPages)}}
        <a href='?page={{add currentPage 1}}' class='px-3 py-1 border rounded hover:bg-gray-100'>
          &raquo;
        </a>
        <a href='?page={{totalPages}}' class='px-3 py-1 border rounded hover:bg-gray-100'>
          Cuối
        </a>
      {{/if}}
    </div>
  {{/if}}
</div>