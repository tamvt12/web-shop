<div class='flex justify-center w-[70%] items-center min-h-screen bg-gray-100'>
  <div class='w-full max-w-4xl px-4'>
    <div class='bg-white shadow-lg rounded-lg overflow-hidden my-10'>
      <div class='grid grid-cols-1 lg:grid-cols-2'>
        <!-- Hình ảnh hoặc khối trang trí -->
        <div class='hidden lg:block bg-cover bg-center'>
          <img src='/img/login.jpg' alt='Logo' class='w-[80%] h-auto mx-auto' />
        </div>

        <!-- Form Login -->
        <div class='p-8'>
          <div class='text-center mb-6'>
            <h1 class='text-2xl font-semibold text-gray-900'>
              Chào mừng trở lại!
            </h1>
          </div>

          {{#if messages.error}}
            <div class='mb-4 p-3 bg-red-100 text-red-700 rounded'>
              {{messages.error}}
            </div>
          {{else if messages.success}}
            <div class='mb-4 p-3 bg-green-100 text-green-700 rounded'>
              {{messages.success}}
            </div>
          {{/if}}

          <form method='post' action='login' class='space-y-4'>
            <div>
              <input
                type='email'
                name='email'
                class='w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-1'
                placeholder='Nhập email'
								onblur="this.value = this.value.trim()"
              />
            </div>
            <div>
              <input
                type='password'
                name='password'
                class='w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-1'
                placeholder='Nhập mật khẩu'
								onblur="this.value = this.value.trim()"
              />
            </div>
            <button
              type='submit'
              class='w-full bg-btn text-white py-2 rounded-lg bg-custom-green-hover transition duration-200'
            >
              Đăng nhập
            </button>
          </form>

          <div class='text-center mt-4'>
            <a class='text-sm text-blue-600 no-underline' href='register'>
              Tạo tài khoản mới!
            </a>
            <a class="text-sm" href='/forgot-password'>
              Quên mật khẩu?
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>