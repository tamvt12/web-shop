<div class='flex justify-center w-[70%] items-center min-h-screen bg-gray-100'>
  <div class='w-full max-w-4xl px-4'>
    <div class='bg-white shadow-lg rounded-lg overflow-hidden my-10'>
      <!-- Form Login -->
      <div class='p-8'>
        <div class='text-center mb-6'>
          <h1 class='text-2xl font-semibold text-gray-900'>
            Đặt lại mật khẩu
          </h1>
        </div>

        {{#if messages.error}}
          <div class='mb-4 p-3 bg-red-100 text-red-700 rounded'>
            {{messages.error}}
          </div>
        {{else if messages.success}}
          <div class='mb-4 p-3 bg-green-100 text-green-700 rounded'>
            {{messages.success}}
          </div>
        {{/if}}

        <form
          action="/reset-password/{{token}}"
          method='POST'
          class='space-y-4 m-auto'
        >
          <div>
            <input
              type='password'
              name='password'
              placeholder='Mật khẩu mới'
              required
              class='w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-1'
							onblur="this.value = this.value.trim()"
            />
          </div>
          <div>
            <input
              type='password'
              name='confirmPassword'
              placeholder='Xác nhận mật khẩu'
              required
              class='w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-1'
							onblur="this.value = this.value.trim()"
            />
          </div>
          <button
            type='submit'
            class='w-full bg-btn text-white py-2 rounded-lg bg-custom-green-hover transition duration-200'
          >
            Đặt lại mật khẩu
          </button>
        </form>
      </div>
    </div>
  </div>
</div>